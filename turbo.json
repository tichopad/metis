{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env", ".prettierrc.js", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["format", "check"],
      "inputs": ["**/*.{js,svelte,ts}"],
      "outputs": [".eslintcache"]
    },
    "format": {
      "inputs": ["**/*.{js,json,md,svelte,ts,yml,yaml}"]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["**/*.{js,json,html,svelte,ts}"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
